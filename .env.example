# FoosPulse Environment Configuration

# Port Configuration (avoid collisions with common services)
WEB_PORT=3100
API_PORT=8100
POSTGRES_PORT=5450
REDIS_PORT=6390

# Database
DATABASE_URL=postgresql+psycopg://foospulse:foospulse@postgres:5432/foospulse
POSTGRES_USER=foospulse
POSTGRES_PASSWORD=foospulse
POSTGRES_DB=foospulse

# Redis
REDIS_URL=redis://redis:6379/0

# Security (generate a secure random string for production!)
JWT_SECRET=dev-secret-change-in-production-32chars

# Artifacts
ARTIFACTS_DIR=/data/artifacts

# LLM Mode (off|optional|required) - default off for v1
LLM_MODE=off

# API Settings
API_DEBUG=true
API_CORS_ORIGINS=http://localhost:3100

# Worker Settings
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
